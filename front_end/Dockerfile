#CMD sleep 45 && /usr/local/bin/setup.sh && echo "hostname ; date" | qsub -o /tmp/a.txt &&  /opt/docker/bin/entrypoint.sh supervisord
CMD /opt/docker/bin/entrypoint.sh supervisord


